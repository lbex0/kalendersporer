<mvc:View
    controllerName="kalenderui.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
  <Page showHeader="false" enableScrolling="false" class="sapUiContentPadding" backgroundDesign="Solid">
    <VBox width="100%" height="100vh" justifyContent="Center" alignItems="Center">
      <Panel width="380px" headerText="Welcome back" class="loginCard" expandable="false">
        <content>
          <VBox renderType="Bare" width="100%" alignItems="Center" class="loginPanelContent" gap="1rem">
            <core:Icon src="sap-icon://employee" size="4rem" class="loginAvatar" />
            <Text text="Sign in to continue" class="sapUiTinyMarginBottom" />
            <Label text="Username" labelFor="usernameInput" />
            <Input id="usernameInput" placeholder="Enter your username" width="100%" liveChange="onUsernameChange" />
            <Label text="Password" labelFor="passwordInput" />
            <Input id="passwordInput" placeholder="Enter your password" type="Password" width="100%" />
            <Button text="Log in" type="Emphasized" width="100%" press="onLogin" />
          </VBox>
        </content>
      </Panel>
    </VBox>
  </Page>
</mvc:View>